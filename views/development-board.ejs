<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RRP - Development Panel</title>
    <link rel="stylesheet" href="/development-board.css">
    <link rel="icon" type="image/x-icon" href="/img/logo.png">
    <link href="https://fonts.cdnfonts.com/css/akrobat" rel="stylesheet">
</head>
<body>
    <div id="obenlinks">
        <div><img id="logo" src="/img/logo.png" alt="Logo"></div>
        <div id="logotext">Raleigh<span id="logotext2">Roleplay</span></div>
    </div>
    <div id="strich1"></div>
    
    <div id="nav">
        <a href="/" id="home">HOME</a>
        <div id="homestrich"></div>
        <a href="/forum" id="forum">FORUM</a>
        <a href="/development-board" id="development">DEVELOPMENT</a>
        <a href="/coming-soon" id="shop">SHOP</a>
        <a href="https://discord.gg/gUDr28uf6e" target="_blank" id="dc">DISCORD</a>
    </div>
<div class="task-columns">
  <div class="task-column">
    <h2>Feedback</h2>
    <% tasksByStatus.Feedback.forEach(task => { %>
      <div class="task-card">
        <h3><%= task.title %></h3>
        <p><%= task.description %></p>
        <p><strong>Status:</strong> <%= task.status %></p>
      </div>
    <% }) %>
  </div>

  <div class="task-column">
    <h2>To-Do</h2>
    <% tasksByStatus["To-Do"].forEach(task => { %>
      <div class="task-card">
        <h3><%= task.title %></h3>
        <p><%= task.description %></p>
        <p><strong>Status:</strong> <%= task.status %></p>
      </div>
    <% }) %>
  </div>

  <div class="task-column">
    <h2>In-Progress</h2>
    <% tasksByStatus["In-Progress"].forEach(task => { %>
      <div class="task-card">
        <h3><%= task.title %></h3>
        <p><%= task.description %></p>
        <p><strong>Status:</strong> <%= task.status %></p>
      </div>
    <% }) %>
  </div>

  <div class="task-column">
    <h2>Completed</h2>
    <% tasksByStatus.Completed.forEach(task => { %>
      <div class="task-card">
        <h3><%= task.title %></h3>
        <p><%= task.description %></p>
        <p><strong>Status:</strong> <%= task.status %></p>
      </div>
    <% }) %>
  </div>
</div>

<div id="copyright">
  <p>Copyright Â© 2025 by Raleigh Roleplay</p>
  <a href="/privacy-policy">Privacy Policy</a> | 
  <a href="/terms-of-service">Terms of Service</a>
</div>

<script>
  function isMobile() {
      return /Mobi|Android/i.test(navigator.userAgent);
  }

  if (isMobile()) {
      window.location.href = '/mobile-user';  
  }
  </script>
</body>
</html>

